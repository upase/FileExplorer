<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shubhm.fileexplorer.shared">
    <LinearLayout android:layout_height="100dp" android:layout_width="match_parent" android:gravity="top"

        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">







    </LinearLayout>
    <LinearLayout android:layout_gravity="bottom" android:layout_height="290dp" android:layout_width="361dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:weightSum="1">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Name"
                android:id="@+id/textView2"
                android:layout_weight="0.04" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText7"
                android:layout_weight="0.13" />

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Roll No"
                android:id="@+id/textView3"
                android:layout_weight="4.04" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText8"
                android:layout_weight="1" />



        </LinearLayout>


        <LinearLayout android:layout_width="match_parent" android:layout_height="58dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Semister"
                android:id="@+id/textView8"
                android:layout_weight="2.20" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText9"
                android:layout_weight="1" />



        </LinearLayout>
        <LinearLayout android:layout_height="272dp" android:layout_width="268dp" android:gravity="right"
            android:orientation="vertical">




            <Button

                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/button8"
                android:textSize="25dp" />
            <Button
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:id="@+id/button9"
                android:textSize="25dp" />
        </LinearLayout>




    </LinearLayout>


</RelativeLayout>
